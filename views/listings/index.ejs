<%  layout("/layouts/boilerplate") %>
<body>
     <h3>All Listing</h3>
     

          <!-- <form method="GET" action ="/listings/new">
            <Button >Add newListing</Button>
          </form> -->
          <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(listings of allListings){  %>
              <a href="/listings/<%=listings._id%>"class="listing-link">
              <div class="card col listing-card">
                <img src="<%=listings.image%>" 
                class="card-img-top" alt="listing_image" 
                style="height: 20rem;"/>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b> <%=listings.title %> </b> <br>
                    &#8377;<%=listings.price.toLocaleString("en-In")%>/night
                  </p>
                </div>
              </div>
            </a>
              <% } %>
          </div>
  </body>